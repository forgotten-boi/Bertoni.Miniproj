@model IEnumerable<Photo>
@{
    <table id="tblPhotos" class="table table-striped table-bordered accordion-toggle table-sm" cellspacing="0" width="100%">

        @if (Model == null || Model.Count() == 0)
        {
            <tr><td style="text-align:center">No Content</td></tr>
        }
        else
        {
            <thead>
                <tr>
                    <th>
                        S/N
                    </th>
                    <th>
                        Image Title
                    </th>
                    <th>
                        Image
                    </th>
                    <th>

                    </th>
                </tr>
            </thead>
            <tbody>
                @{
                    int count = 1;
                }
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@count</td>
                        <td>
                            @item.Title

                        </td>
                        <td><img src="@item.ThumbnailUrl" alt="@item.Title" /></td>
                        <td><input type="button" class="btnViewComment" data-id="@item.id" value="View Comment" /></td>
                    </tr>
                    count++;
                }
            </tbody>
        }
    </table>
    <div class="currentRow">

    </div>
}


